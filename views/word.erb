<h3>Definitions for <%= @word.word() %>:</h3>

<ul>
  <% @word.definitions().each() do |define| %>
    <li><%= define.definition() %></li>
  <% end %>
</ul>

<h3>Add a new definition for <%= @word.word() %>:</h3>
<form action="/word" method="post">
  <input id='word_id' name='word_id' type='hidden' value='<%= @word.id() %>'>
  <label for='definition'>New definition:</label>
  <input id='definition' name='definition' type='text'>

  <button type="submit">Add Definition</button>
</form>

<a href="/">Return to Main Page</a>
