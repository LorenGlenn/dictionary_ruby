<h1>Welcome to your dictionary</h1>
<h3>Click a word to see the definitions</h3>
<ul>
  <% @words.each() do |word| %>
    <li><a href="/word/<%= word.id() %>"><%= word.word() %></a></li>
  <% end %>
</ul>

<h1>Add a Word </h1>

<form action="/" method="post">

  <label for='word'>New word:</label>
  <input id='word' name='word' type='text'>

  <button type="submit">Add Word</button>
</form>
